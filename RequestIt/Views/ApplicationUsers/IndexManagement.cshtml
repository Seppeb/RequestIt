@model IEnumerable<RequestIt.ViewModels.ApplicationUserIndexManagementViewModel>
@{
    ViewData["Title"] = "IndexManagement";
}

<h2>User Management</h2>

<table class="table table-condensed table-hover table-responsive">
    <thead>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Voornaam)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Achternaam)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Email)
            </td>            
        </tr>
        

    </thead>

    @foreach (var user in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => user.Voornaam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => user.Achternaam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => user.Email)
        </td>
        <td align="right">
            <a class="btn btn-sm btn-success glyphicon glyphicon-pencil" asp-action="Edit" asp-route-id="@user.UserId"></a>
            <a class="btn btn-sm btn-info glyphicon glyphicon-search" asp-action="Details" asp-route-id="@user.UserId"></a>
            <a class="btn btn-sm btn-danger glyphicon glyphicon-trash" asp-action="Delete" asp-route-id="@user.UserId"></a>
        </td>
    </tr>
    }
</table>

