@model IEnumerable<RequestIt.ViewModels.ApplicationUserIndexViewModel>
@using RequestIt.Utility
@{
       ViewData["Title"] = "Index";
}

<h2>Gebruiker Management</h2>

        <hr />
        <a asp-action="Register" asp-controller="Account" class="btn btn-sm btn-primary">Maak Niewe gebruiker aan</a>
        
        
        <hr />
    
    <table class="table table-condensed table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Voornaam)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Achternaam)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.Rol)
                </th>*@
                
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => user.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.Voornaam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.Achternaam)
                </td>                
                @*<td>
                    @Html.DisplayFor(modelItem => user.Rol)
                </td>*@
                <td align="right">
                    <a class="btn btn-sm btn-success glyphicon glyphicon-pencil" asp-action="Edit" asp-route-id="@user.UserId"></a>
                    <a class="btn btn-sm btn-info glyphicon glyphicon-search" asp-action="Details" asp-route-id="@user.UserId"></a>
                    <a class="btn btn-sm btn-danger glyphicon glyphicon-trash" asp-action="Delete" asp-route-id="@user.UserId"></a>
                </td>
            </tr>
            }
        </tbody>
    </table>